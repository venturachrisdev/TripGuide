<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blancgrupo.apps.tripguide.presentation.ui.activity.CongratsActivity">

    <RelativeLayout
        android:background="@color/colorAccent"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_navigation_white_24dp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/textView1"
            android:text="@string/congrats"
            android:textAlignment="center"
            android:textColor="@color/colorIcon"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/imageView1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display4"
            fontPath="fonts/Montserrat/Montserrat-Light.ttf"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/colorIcon"
            android:text="@string/you_completed_tour"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn"
            android:background="@color/colorIcon"
            android:textColor="@color/colorAccent"
            android:text="+ 10XP"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
