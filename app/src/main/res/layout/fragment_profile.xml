<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="com.blancgrupo.apps.tripguide.presentation.ui.fragment.ProfileFragment">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingTop="100dp"
            android:paddingBottom="40dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:background="@color/colorAccent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="70dp"
                android:layout_marginBottom="14dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/user_profile_name"
                android:textColor="@color/colorIcon"
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_image"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/user_profile_email"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/user_profile_location_icon"
                app:srcCompat="@drawable/ic_place_white_24dp"
                android:alpha="0.9"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_alignBottom="@+id/user_profile_location"
                android:layout_toLeftOf="@+id/user_profile_location"
                android:layout_toStartOf="@+id/user_profile_location" />

            <TextView
                android:id="@+id/user_profile_location"
                android:text="Santo Domingo, Republica Dominicana"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_email"
                android:layout_alignRight="@+id/user_profile_name"
                android:layout_alignEnd="@+id/user_profile_name" />


            <FrameLayout
                android:layout_width="wrap_content"
                app:theme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_below="@+id/user_profile_location"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

        </FrameLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/topic_icon"
                app:srcCompat="@drawable/ic_rate_review_black_24dp"
                android:alpha="0.5"
                android:tint="@color/colorSelectableBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:transformPivotY="10dp"
                android:transformPivotX="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/topic_title"
                fontPath="fonts/Montserrat/Montserrat-Light.ttf"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:text="Reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/topic_icon"
                android:layout_toEndOf="@+id/topic_icon" />

        </RelativeLayout>


        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/profile_rv"
            android:padding="15dp"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
