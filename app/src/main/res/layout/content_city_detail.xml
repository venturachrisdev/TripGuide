<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nestedscrollview"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blancgrupo.apps.tripguide.presentation.ui.activity.CityDetailActivity"
    tools:showIn="@layout/activity_city_detail"
    >

    <LinearLayout
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent">


        <com.blancgrupo.apps.tripguide.presentation.ui.custom.FeatureCardView
            android:layout_width="wrap_content"
            android:id="@+id/featurecardview"
            android:layout_height="wrap_content"/>

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/all_topics_rv"
            android:nestedScrollingEnabled="false"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:shimmer_demo_child_count="5"
            app:shimmer_demo_layout="@layout/shimmer_all_topics_layout"
            app:shimmer_demo_layout_manager_type="linear_vertical"
            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
